{
    "name": "jaspernbrouwer/doctrine-dbal-bridge",
    "description": "Bridge for using SimpleBus with Doctrine DBAL",
    "type": "library",
    "keywords": ["command bus", "doctrine", "dbal"],
    "homepage": "https://github.com/jaspernbrouwer/DoctrineDBALBridge",
    "license": "MIT",
    "authors": [
        {
            "name": "Jasper N. Brouwer",
            "email": "jasper@nerdsweide.nl"
        }
    ],

    "require": {
        "php": ">=5.4",
        "simple-bus/message-bus": "~1.0",
        "doctrine/dbal": "~2.3"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.3"
    },

    "autoload": {
        "psr-4" : { "JNB\\DoctrineDBALBridge\\" : "src" }
    },
    "autoload-dev": {
        "psr-4" : { "JNB\\DoctrineDBALBridge\\Tests\\" : "tests" }
    }
}
